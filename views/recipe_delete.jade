extends layout

block content
  h1 Delete Recipe

  p Are you sure you want to delete this recipe?
  p #[strong Title:] #{recipe.title}
  p #[strong Description:] #{recipe.description}
  p #[strong Instructions:] #{recipe.instructions}
  p #[strong Ingredients:]
    ul
      each ingredient in recipe.ingredients
        li #{ingredient}

  form(action="/catalog/recipe/#{recipe._id}/delete" method="post")
    input(type="hidden" name="recipeid" value=recipe._id)
    button(type="submit" class="btn btn-danger") Delete
    a(href="/catalog/recipes" class="btn btn-secondary") Cancel
